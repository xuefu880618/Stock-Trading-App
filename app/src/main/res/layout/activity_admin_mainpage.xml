<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminmainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminMainpage"
    android:background="@color/black">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <Button
                android:id="@+id/adminlogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="168dp"
                android:text="Sign out"
                app:layout_constraintBottom_toTopOf="@+id/adminAddcloseday"
                app:layout_constraintEnd_toEndOf="@+id/adminAddcloseday"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/adminAddcloseday" />

            <Button
                android:id="@+id/settime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Set Time"
                app:layout_constraintBottom_toTopOf="@+id/adminAddcloseday"
                app:layout_constraintEnd_toEndOf="@+id/adminAddcloseday"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/adminAddcloseday" />

            <Button
                android:id="@+id/adminAddstock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:text="Add New Stock"
                app:layout_constraintBottom_toTopOf="@+id/adminAddcloseday"
                app:layout_constraintEnd_toEndOf="@+id/adminAddcloseday"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/adminAddcloseday" />

            <Button
                android:id="@+id/adminAddcloseday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:text="Add and delete close day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="387dp"
                android:layout_height="66dp"
                android:gravity="center"
                android:text="Admin Main Page"
                android:textSize="32dp"
                android:textColor="@color/red"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>